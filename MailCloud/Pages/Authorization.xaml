<Page x:Class="MailCloud.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MailCloud.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
      Title="Authorization">

    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible" x:Name="gridAuth">
        <StackPanel>
            <TextBlock Text="Enter username" FontSize="30" />
            <TextBox x:Name="tbUsername" FontSize="30" />
            <TextBlock Text="Enter password" FontSize="30"/>
            <TextBox x:Name="tbPassword" FontSize="30" />
            <Button x:Name="btnLogin" Height="50" Content="Login" FontSize="30" Margin="0 30 0 0"  Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>

</Page>
